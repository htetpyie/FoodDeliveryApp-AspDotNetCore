<section>
    <div class="container">
        <div class="row">
            <div class="text-center col-lg-12">
                <h2>Popular Foods</h2>
            </div>
            <div class="col-lg-12">
                <div class="food__category d-flex align-items-center justify-content-center gap-4">
                    <button type="button" class="all__btn  @(0 == 0 ? "foodBtnActive" : "") " onclick="() => FindFoodByCategory()">All</button>
                    @foreach (var item in ViewBag.FoodCategoryList)
                    {
                        string imagePath = $"assets/img/food-category/{item.CategoryId}.png";
                        <button type="button" class="d-flex align-items-center gap-2 @(0 == item.CategoryId ? "foodBtnActive" : "") " onclick="() => FindFoodByCategory(item.CategoryId)">
                            <img src="@(imagePath)"
                                 alt="">@item.CategoryName
                        </button>
                    }
                </div>
            </div>           
            @await Html.PartialAsync("_FoodPagination");
        </div>
    </div>
</section>